  %body<>
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %ul.nav
            %li.active
              %a{:href => "/"}
                Home

    .container<>
      .span10
        %section<>
          .page-header
            %h1
              {{ page.title }}

          .toc

          {{ content }}

          %h2 Tell me what you think!

          %p
            Please take a moment to tell me what you think about my blog
            %a{ :href => "http://twitter.com/ifesdjeen" }
              on Twitter
            or contact me
            %a{ :href => "mailto:oleksandr.petrov@gmail.com" }
              by email

          {% if page.disqus_identifier %}
          #disqus_thread
          :javascript
            /* * * CONFIGURATION VARIABLES * * */
            var disqus_shortname = 'ifesdjeen'; // required: replace example with your forum shortname

            var disqus_developer = 0; // set to 1 on local machine for testing comments
            var disqus_identifier = '{{ page.disqus_identifier }}';
            var disqus_url = '{{ page.disqus_url }}';

            /* * * DON'T EDIT BELOW THIS LINE * * */
            (function() {
                var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
            })();
          {% endif %}
